pipeline {
    agent any
    
    parameters {
        string(name: 'ECR_REPO_NAME', defaultValue: 'devops-project', description: 'Enter repository name')
        string(name: 'AWS_ACCOUNT_ID', defaultValue: '637423542227', description: 'Enter AWS Account ID') 
    }
    
    tools {
        jdk 'JDK'
        nodejs 'NodeJS'
    }
    
    environment {
        SCANNER_HOME = tool 'SonarQube Scanner'
        AWS_DEFAULT_REGION = 'us-east-1'
    }
    
    stages {
        stage('1. Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/RahmaMissaoui/DevopsProject.git'
            }
        }
        
        stage('2. SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """
                    $SCANNER_HOME/bin/sonar-scanner \
                    -Dsonar.projectName=devops-project \
                    -Dsonar.projectKey=devops-project
                    """
                }
            }
        }
        
        stage('3. Quality Gate') {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: false, 
                        credentialsId: 'sonar-token'
                    }
                }
            }
        }
        
        stage('4. Install npm Dependencies') {
            steps {
                sh "npm install"
            }
        }
        
        stage('5. Trivy Filesystem Scan') {
            steps {
                sh "trivy fs . --format table -o trivy-fs-report.txt"
            }
        }
        
        stage('6. Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${params.ECR_REPO_NAME}:${BUILD_NUMBER} ."
                    sh "docker tag ${params.ECR_REPO_NAME}:${BUILD_NUMBER} ${params.ECR_REPO_NAME}:latest"
                }
            }
        }
        
        stage('7. Trivy Image Scan') {
            steps {
                sh "trivy image ${params.ECR_REPO_NAME}:latest --format table -o trivy-image-report.txt"
            }
        }
        
        stage('8. Create ECR Repository') {
            steps {
                script {
                    // EC2 has LabInstanceProfile attached, so AWS CLI uses IAM role automatically
                    sh """
                    aws ecr describe-repositories --repository-names ${params.ECR_REPO_NAME} --region us-east-1 || \
                    aws ecr create-repository --repository-name ${params.ECR_REPO_NAME} --region us-east-1
                    """
                }
            }
        }
        
        stage('9. Login to ECR & Tag Image') {
            steps {
                script {
                    // NO CREDENTIALS NEEDED - EC2 uses LabInstanceProfile
                    sh """
                    aws ecr get-login-password --region us-east-1 | \
                    docker login --username AWS --password-stdin ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com
                    
                    docker tag ${params.ECR_REPO_NAME}:${BUILD_NUMBER} \
                    ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:${BUILD_NUMBER}
                    
                    docker tag ${params.ECR_REPO_NAME}:latest \
                    ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:latest
                    """
                }
            }
        }
        
        stage('10. Push Image to ECR') {
            steps {
                script {
                    sh """
                    docker push ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:${BUILD_NUMBER}
                    docker push ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:latest
                    """
                }
            }
        }
        
        stage('11. Cleanup Local Images') {
            steps {
                script {
                    sh """
                    docker rmi ${params.ECR_REPO_NAME}:${BUILD_NUMBER} || true
                    docker rmi ${params.ECR_REPO_NAME}:latest || true
                    docker rmi ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:${BUILD_NUMBER} || true
                    docker rmi ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:latest || true
                    echo "=== Remaining Docker Images ==="
                    docker images
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo '=== Pipeline Completed ==='
            // Archive scan reports
            archiveArtifacts artifacts: 'trivy*.txt', allowEmptyArchive: true
        }
        success {
            echo 'Build completed successfully!'
            echo "Image pushed: ${params.AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/${params.ECR_REPO_NAME}:${BUILD_NUMBER}"
        }
        failure {
            echo 'Build failed! Check logs above.'
        }
    }
}